<UserControl x:Class="Constructora.Views.HeaderUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
            <Image Width="50" Height="50" Source="/Constructora.Infrastructure;component/Assets/Images/ToolsLogo.png"/>
            <TextBlock Text="Seguimiento de Obras"  FontSize="24" Foreground="{StaticResource AccentBrush}"
                       Margin="15,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
